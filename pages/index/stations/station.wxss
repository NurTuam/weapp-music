/* 主播电台 */
.station .station_header{
  width: 100%;
  height: 60rpx;
  position: relative;
  padding-top: 20rpx;
}
.station .station_header .station_title{
   font-size: 18px;
   font-weight: bold;
   float: left;
   padding-left: 10rpx;
}
.station .station_header .change{
  float: right;
  font-size: 12px;
  width: 127rpx;
  padding-right: 12rpx;
}
.station .station_header .change image{
  display: block;
  width: 30rpx;
  height: 30rpx;
  margin-right: 4rpx;
  color: #ccc;
  padding-top: 7px;
  float: left;
}
.station .station_header .change text{
  float: right;
  padding-top: 12rpx;
}
.station_content{
  display:flex;
  justify-content:space-between;
  flex-wrap:wrap;
}
.station_content .station_list{
  width:calc(100% - 8px);
  margin-bottom: 10rpx;
  overflow: hidden;
  height: 262rpx;
  padding-left: 10rpx;
}
.station_content .station_list image{
  display:inline-block;
  height:100%;
  vertical-align:middle;
  width:100px;
  border-radius: 10rpx;

}
.station_content .station_list .station_text{
  display: inline-block;
  vertical-align: middle;
  width: 66%;
  height: 232rpx;
  margin-left: 5rpx;
  border-bottom: 1px solid #f0f0f0;
  padding-top:30rpx; 
}
.station_content .station_list .station_text .station_blod{
  font-size: 16px;
  font-weight: bold;
  display: block;
  width: 100%;
  margin-bottom: 10rpx;
}
.station_content .station_list .station_text .program{
  font-size: 10px;
  color: #ccc;
  margin-bottom: 5rpx;
  line-height: 60rpx;
  display: block;
  width: 100%;
}
.station_content .station_list .station_text .produce{
  font-size: 10px;
  color: #ccc;
  margin-bottom: 20rpx;
  line-height: 80rpx;
  display: block;
  width: 100%;
}