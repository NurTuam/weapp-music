.state_items{
  position:relative;
  margin-top:0;
  background-color:#FFFFFF;
  line-height:1.41176471;
  font-size:17px;
}
.state_item{
  padding:10px 15px;
  position:relative;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-box-align:center;
  -webkit-align-items:center;
  align-items:center;
  color: inherit;
}
.bg-img{
  width:30px;
  height:30px;
}
.item_text{
  padding-left:15px;
  flex: 1;
}
.item_num{
  text-align:right;
  color:#999;
  padding-right:13px;
  position:relative;
}
.listen-content{
  position: relative;
}
.listen-content .bg-img{
  width: 50px;
  height: 50px;
}
.downline{
  width: 240px;
  height: 1px;
  position: absolute;
  left: 80px;
  top: 70px;
  background: #ccc;
}
.my_songs{
  padding-left:15px;
  background-color:#eeeff0;
  color: #888;
  width: 100%;
  height: 25px;
  font-size:16px;
}
.count{
  color: #888;
}